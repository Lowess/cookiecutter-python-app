### Local developement

.PHONY: dev tests lint checkstyle coverage docs

FORCE=

run:
ifeq ($(FORCE),)
	docker-compose -f docker/docker-compose.yml up
else
	docker-compose -f docker/docker-compose.yml build --no-cache
	docker-compose -f docker/docker-compose.yml up
endif

dev:
	@echo âš™ï¸ Setting up dev environment and dependencies...
	pip install -r requirements.txt
	pip install -e '.[dev]'
	@echo âš™ï¸ Setting up pre-commit hooks...
	pre-commit install
	pre-commit install --hook-type commit-msg

tests:
	$(MAKE) lint
	$(MAKE) checkstyle
	$(MAKE) coverage

lint:
	@echo ğŸ’  Linting code...
	tox -e lint

checkstyle:
	@echo âœ… Validating checkstyle...
	tox -e checkstyle

coverage:
	@echo ğŸ”ï¸  Run test coverage...
	tox -e coverage

docs:
	@echo ğŸ“š Generate documentation using sphinx...
	tox -e docs
